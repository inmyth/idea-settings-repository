<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_name"
                style="@style/formElement"
                android:hint="@string/cam.name">

                <EditText
                    android:id="@+id/name"
                    style="@style/formEditText"
                    android:inputType="text"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                style="@style/formTitle"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/cam.protocol" />

            <Spinner
                android:id="@+id/protocol"
                style="@style/formElement"
                android:layout_marginTop="@dimen/spacing_small" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_host"
                style="@style/formElement"
                android:hint="@string/cam.host">

                <EditText
                    android:id="@+id/host"
                    style="@style/formEditText"
                    android:inputType="textUri"
                    android:lines="5" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/formElement"
                android:hint="@string/cam.port">

                <EditText
                    android:id="@+id/port"
                    style="@style/formEditText"
                    android:inputType="number"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/formElement"
                android:hint="@string/cam.username">

                <EditText
                    android:id="@+id/username"
                    style="@style/formEditText"
                    android:inputType="text"
                    android:lines="1" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/formElement"
                android:hint="@string/cam.password">

                <EditText
                    android:id="@+id/password"
                    style="@style/formEditText"
                    android:inputType="text"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/formTitle"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/cam.type" />

            <Spinner
                android:id="@+id/model"
                style="@style/formElement"
                android:layout_marginTop="@dimen/spacing_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>


    </ScrollView>

    <com.michaldrabik.tapbarmenulib.TapBarMenu
        android:id="@+id/tapBarMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/iv.gen"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_check_circle_white_24dp" />

        <Space
            android:layout_width="56dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/iv.gen"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_cancel_white_24dp"
            />

    </com.michaldrabik.tapbarmenulib.TapBarMenu>

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp" />

</FrameLayout>